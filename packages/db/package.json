{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./schema/*": "./schema/*.ts"
  },
  "scripts": {
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "dotenv -e ../../.env -- drizzle-kit push:pg",
    "db:studio": "dotenv -e ../../.env -- drizzle-kit studio",
    "db:seed": "dotenv -e ../../.env -- tsx seed.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.30.10",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.0",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.20.0",
    "tsx": "^4.7.1"
  }
}
